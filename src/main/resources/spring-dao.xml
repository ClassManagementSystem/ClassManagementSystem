<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <properties resource="db.properties"/>

    <typeAliases>

        <package name="com.tpg.cms.model"/>
    </typeAliases>
    <typeHandlers>
        <typeHandler jdbcType="VARCHAR" javaType="List"
                     handler="com.hnlit.typeHandler.ListTypeHandler"/>
    </typeHandlers>
    <!-- 	<objectFactory type="com.hnlit.factory.MyObjectFactory"> -->
    <!-- 		<property name="name" value="MyObjectFactory" /> -->
    <!-- 	</objectFactory> -->


    <environments default="mysql">
        <environment id="mysql">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="${jdbc.driver}"/>
                <property name="url" value="${jdbc.url}"/>
                <property name="username" value="${jdbc.username}"/>
                <property name="password" value="${jdbc.password}"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>

        <package name="com.tpg.cms.service"/>

    </mappers>
</configuration>